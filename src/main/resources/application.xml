<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="PostgresDriver"/>
    </bean>


<!--    in constructor:-->
<!--    1 value for initialization-->
<!--    2 index if we want write arguments not as in strict constructor order-->
<!--    3 name we use to much parameter with constructor parameter-->
    <bean id="pool1" name="p1,p2,p3" class="com.dmdev.spring.database.pool.ConnectionPool">
        <constructor-arg value="strPostgres" name="username" index="0"/>
        <constructor-arg value="10" name="poolSize" index="1"/>
        <constructor-arg name="args">
            <list>
                <value>--arg1=value1</value>
                <value>--arg2=value2</value>
            </list>
        </constructor-arg>
        <constructor-arg name="properties">
            <map>
                <entry key="url" value="postgersurl"/>
                <entry key="password" value="123"/>
            </map>
        </constructor-arg>
    </bean>
    <!--    <bean id="pool2" name="p4" class="com.dmdev.spring.database.pool.ConnectionPool"/>-->

</beans>